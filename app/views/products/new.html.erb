<%= render 'layouts/header' %>
<div class="container">
<div class="row">
<div class="col-md-6">
<div style="margin: 30px 20px;">
<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, :placeholder => "Name"%>
  <%= f.label :price %>
  <%= f.text_field :price, :placeholder => "" %></br>
  <%= f.label :Category %>
  <%= f.collection_select :category, Product::CATEGORY, :to_s, :humanize, :prompt => "Select One"%></br>
  <%= f.file_field :image %></br>
  <div style="margin: 10px 0 0 0;">
  <%= f.submit "Create Product", class: "btn btn-primary"%>
  </div>
<% end %>
</div>
</div>
</div>
</div>
<%= render 'layouts/footer' %>